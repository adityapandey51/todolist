<!-- including the header -->
<%-include("header")-%>
    <div class="box" id="heading">
        <!-- taking the custom list title from index.js -->
        <h1><%=listTitle%></h1>
    </div>

    <div class="box">
        <!-- checkbox -->
            <%for (var i=0;i<=newItem.length-1;i++){%>
                <!-- posts the input (checkbox on) to /delete page -->
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%=newItem[i]._id%>" onchange="this.form.submit()">
                        <p><%=newItem[i].name%></p>
                    </div>
                    <input type="hidden" name="listName" value="<%=listTitle%>"></input>
                </form>
           
            <%}%>
            <!-- posts this input to homeroute -->
            <form action="/" method="post" class="item">
                <input type="text" name="item" placeholder="New Item" autocomplete="off">
                <button type="submit" name="button" value=<%=listTitle%>>+</button>
            </form>
    </div>
    
    <!-- including footer template -->
<%-include("footer")-%>  
